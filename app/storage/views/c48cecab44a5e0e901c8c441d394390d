<?php
$current_url = $_SERVER['REQUEST_URI'];
$current_page = end((explode('/', $current_url)));
$home = '';
$login = '';
$register = '';
$report = '';
$list = '';
$browse = '';
$help = '';
switch($current_page){
    case 'login':
        $login = 'active';
        break;
    case 'register':
        $register = 'active';
        break;
    case 'report':
        $report = 'active';
        break;
    case 'list':
        $list = 'active';
        break;
    case 'browse':
        $browse = 'active';
        break;
    case 'help':
        $help = 'active';
        break;
    default:
        $home = 'active';
        break;
}
?>
